{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_VERCEL_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/cron/refresh-recommendations",
      "schedule": "0 0 * * *"
    }
  ]
} 